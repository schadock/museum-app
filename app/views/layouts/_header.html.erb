<header>
  <div class="nav-row">
      <div class="col-xs-4" style="text-align: center; margin-top: 30px;">
        <a class="popover-link-bottom" data-container="body" data-html="true" data-toggle="popover" data-content='
          <ul class="fa-ul">
            <li class="main-menu-st">
              <i class="fa-li fa fa-home"></i><%= link_to "Strona Główna", root_path, :class=> "main-menu-item" %>
            </li>
            <li class="main-menu-st">
              <i class="fa-li fa fa-map-marker"></i><%= link_to "Mapa", map_path, :class=> "main-menu-item" %>
            </li>
            <li class="main-menu-st">
              <i class="fa-li fa fa-compass"></i><%= link_to "Kolekcje", collections_path, :class=> "main-menu-item" %>
            </li>
            <li class="main-menu-st">
              <i class="fa-li fa fa-eye"></i></i><%= link_to "Eksponaty", exhibits_path, :class=> "main-menu-item" %>
            </li>
            <% unless user_signed_in? %>

              <% else %>
              <li class="main-menu-st">
                <%= link_to "Dodaj Eksponat", new_exhibit_path, :class=>"main-menu-item"%>
              </li>
              <li class="main-menu-st">
                <%= link_to "Wyloguj się", destroy_user_session_path, method: :delete, :class=>"main-menu-item"%>
              </li>
            <% end%>
          </ul>
