<fieldset>
  <div class="form-group question">
    <label class="col-sm-2 control-label">Pytanie: </label>
    <div class="col-sm-10">
      <%= f.text_area :content, :rows => 2, :class=>"form-control", :id=>"inputEkspPytanie", :placeholder=>"Wprowadź pytanie do quizu" %> 
      <label>Usuń pytanie
        <%= f.check_box :_destroy  %>
        (zaznacz)
      </label>
    </div>
  </div>

  <%= f.fields_for :answers do |buldier| %>
    <%= render 'answer_fields', :f => buldier %>
  <% end %>
</fieldset>
 