<p id="notice"><%= notice %></p>

<h1>Listing Exhibits</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Date of origin</th>
      <th>Place of origin</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exhibits.each do |exhibit| %>
      <tr>
        <td><%= exhibit.title %></td>
        <td><%= exhibit.author %></td>
        <td><%= exhibit.date_of_origin %></td>
        <td><%= exhibit.place_of_origin %></td>
        <td><%= exhibit.description %></td>
        <td><%= link_to 'Show', exhibit %></td>
        <td><%= link_to 'Edit', edit_exhibit_path(exhibit) %></td>
        <td><%= link_to 'Destroy', exhibit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

