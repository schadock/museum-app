<div class="row">
  <% @exhibits.each do |exhibit| %>
      <div class="col-xs-10 mg-around padd" > 
      
        <div class="pull-left">
          <%= link_to image_tag(exhibit.avatar(:thumb), :class=>"img-circle browse-img-style" ), exhibit%> 
        </div>
        <div class="media-body padd">
          <%= link_to exhibit.title, exhibit, :class=> "h4 browse-h4-style" %>
          <h5 class="browse-h5-style"><%= exhibit.author %></h5>
          <h5 class="browse-h5-style"><%= exhibit.date_of_origin %></h5>
        </div>  
      </div>
  <% end %>
</div>