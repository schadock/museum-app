<div class="col-xs-4">
  
    <%= form_for @exhibit do |f| %>
      <% if @exhibit.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@exhibit.errors.count, "error") %> prohibited this exhibit from being saved:</h2>
          <ul>
            <% @exhibit.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <label>Nazwa eksponatu: </label><br>
        <%= f.text_field :title, :class=>"form-control" %>
      </div>
      <div class="form-group">
        <label>Autor: </label>
        <%= f.text_field :author, :class=>"form-control" %>
      </div>
      <div class="form-group">
        <label>Data powstania: </label>
        <%= f.number_field :date_of_origin, :class=>"form-control" %>
      </div>
      <div class="form-group">
        <label>Opis: </label>
        <%= f.text_field :description, :rows => 3, :class=>"form-control text" %>
      </div>
      <div class="text-center"> 
        <label>Zdjęcie: </label>
        <%= f.file_field :avatar, :class=>"file", :id=> "file" %>
      </div>
      <div class="form-group">
        <label>Typ eksponatu: </label>
        <%=  f.select :type_id, options_for_select(@types.map { |t| [t.name, t.id]} )%>
      </div>
      <div class="form-group">
        <label>Numer eksponatu: </label>
        <%= f.number_field :ex_id %>
      </div>
      </br>
      <h3>PYTANIA:</h3>

      <%=  f.fields_for :questions do |buldier| %>
         <div class="form-group">
          <%= buldier.label :content, "Pytanie" %></br> 
          <%= buldier.text_area :content, :rows => 2 %></br>  
          <%= buldier.check_box :_destroy %>
          <%= buldier.label :_destroy, "Usuń Pytanie" %>
         </div>
      <% end %>

      </br>
      <div class="actions">
        <%= f.submit 'Zapisz', :class=> 'btn btn-primary' %>
      </div>
    <% end %>
  
</div>