<div class="col-xs-12">
  <div class="admin-form">
    <%= form_for @exhibit, :html => {:class => 'form-horizontal'} do |f| %>
      <div class="admin-head">
        Panel administratora
      </div>
      <% if @exhibit.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@exhibit.errors.count, "error") %> prohibited this exhibit from being saved:</h2>
          <ul>
            <% @exhibit.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <label class="col-sm-2 control-label">Nazwa eksponatu: </label><br>
        <%= f.text_field :title, :class=>"col-sm-5" %>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Autor: </label>
        <%= f.text_field :author, :class=>"col-sm-5" %>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Data powstania: </label>
        <%= f.text_field :date_of_origin, :class=>"col-sm-5" %>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Opis: </label>
        <%= f.text_area :description, :rows => 5, :class=>"col-sm-10", :placeholder=>"Wprowadź opis eksponatu" %>
      </div>
      <div class="form-group"> 
        <label class="col-sm-2 control-label">Zdjęcie Profilowe: </label>
        <%= f.text_field :big_photo, :class=>"col-sm-5" %>
      </div>
      <div class="form-group"> 
        <label class="col-sm-2 control-label">Miniaturka: </label>
        <%= f.text_field :thumb_photo, :class=>"col-sm-5" %>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Typ eksponatu: </label>
        <%=  f.select :type_id, options_for_select(@types.map { |t| [t.name, t.id]} )%>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Numer eksponatu: </label>
        <%= f.number_field :ex_id, :class=>"col-sm-2" %>
      </div>
      <div class="admin-head">
        Dodaj Pytania
      </div>

      <%=  f.fields_for :questions do |buldier| %>
         <%= render 'question_fields', :f => buldier %>
      <% end %>
      <div class="form-group">
 
      <div class="form-group col-sm-12 admin-addnew">
        <%= link_to_add_fields "Dodaj Pytanie", f, :questions %>
      </div>  </div>
      </br>
      <div class="form-group">
        <div class="col-sm-12">
          <%= f.submit 'Zapisz', :class=> 'btn btn-primary form-control' %>
        </div>
      </div>
    <% end %>  
  </div>
</div>