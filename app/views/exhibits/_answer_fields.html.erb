<fieldset>
  <div class="form-group">
    <label class="col-sm-2 control-label">Odpowiedź: </label>
    <div class="col-sm-10">
      <%= f.text_field :content, :class=>"form-control", :placeholder=>"Podaj odpowiedź" %>
      <div class="checkbox">
        <label>
          <%= f.check_box :correct%>
          Prawidłowa odpowiedź
        </label>
        <%= f.hidden_field :_destroy %>
        <%= link_to "Usuń", '', class: "btn btn-default remove_fields" %>
      </div>
  </div>
</fieldset> 